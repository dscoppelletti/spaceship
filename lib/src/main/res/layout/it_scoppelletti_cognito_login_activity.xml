<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".databinding.LoginActivityBinding">
        <variable name="form"
            type="it.scoppelletti.spaceship.cognito.data.LoginForm" />
    </data>
    <FrameLayout style="@style/it_scoppelletti_style_rootFrame">
        <android.support.design.widget.CoordinatorLayout
            style="@style/it_scoppelletti_style_coordinatorLayout"
            android:fitsSystemWindows="true">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                style="@style/it_scoppelletti_style_appBarLayout"
                android:theme="@style/it_scoppelletti_theme_appBarLayout">
                <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                    style="@style/it_scoppelletti_style_toolbar" />
            </android.support.design.widget.AppBarLayout>
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/content_frame"
                style="@style/it_scoppelletti_style_contentFrame"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/it_scoppelletti_marginHorz"
                    android:layout_marginRight="@dimen/it_scoppelletti_marginHorz"
                    android:layout_marginTop="@dimen/it_scoppelletti_marginVert"
                    android:layout_marginBottom="@dimen/it_scoppelletti_marginVert">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/frm_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        app:it_scoppelletti_error="@{form.userCodeError}"
                        android:theme="@style/it_scoppelletti_theme_textInputLayout">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={form.userCode}"
                            android:hint="@string/it_scoppelletti_lbl_userCode"
                            android:inputType="text"
                            android:maxLines="1"
                            app:it_scoppelletti_validator="@{form.userCodeValidator}" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/frm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/frm_name"
                        app:passwordToggleEnabled="true"
                        app:it_scoppelletti_error="@{form.passwordError}"
                        android:theme="@style/it_scoppelletti_theme_textInputLayout">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={form.password}"
                            android:hint="@string/it_scoppelletti_lbl_password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            app:it_scoppelletti_validator="@{form.passwordValidator}" />
                    </android.support.design.widget.TextInputLayout>
                    <Button android:id="@+id/cmd_resetPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/frm_password"
                        android:text="@string/it_scoppelletti_cmd_resetPassword"
                        android:theme="@style/it_scoppelletti_theme_secondaryRaisedButton"
                        style="@style/it_scoppelletti_style_secondaryRaisedButton" />
                    <Button android:id="@+id/cmd_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/cmd_resetPassword"
                        android:layout_toEndOf="@id/cmd_resetPassword"
                        android:layout_alignBaseline="@id/cmd_resetPassword"
                        android:text="@string/it_scoppelletti_cmd_login"
                        android:theme="@style/it_scoppelletti_theme_raisedButton"
                        style="@style/it_scoppelletti_style_raisedButton" />
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
        <it.scoppelletti.spaceship.widget.ProgressOverlay
            android:id="@+id/progress_bar"
            style="@style/it_scoppelletti_style_progressOverlay" />
    </FrameLayout>
</layout>