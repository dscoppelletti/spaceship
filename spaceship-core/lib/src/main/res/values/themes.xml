<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <eat-comment/>
    <!-- Application -->
    <style name="it_scoppelletti_theme_app"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/it_scoppelletti_theme_preference</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Activity with Navigation Drawer -->
    <style name="it_scoppelletti_theme_drawerActivity"
        parent="it_scoppelletti_theme_app">
    </style>
    <!-- App Bar -->
    <style name="it_scoppelletti_theme_appBarLayout"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Toobar -->
    <style name="it_scoppelletti_theme_toolbarPopup"
        parent="ThemeOverlay.AppCompat.Light" />
    <!-- TextInputLayout -->
    <style name="it_scoppelletti_theme_textInputLayout"
        parent="it_scoppelletti_theme_app">
        <item name="colorControlActivated">?android:attr/colorPrimary</item>
        <item name="colorControlHighlight">?android:attr/colorPrimary</item>
    </style>
    <!-- Raised button -->
    <style name="it_scoppelletti_theme_raisedButton"
        parent="it_scoppelletti_theme_app">
    </style>
    <style name="it_scoppelletti_theme_secondaryRaisedButton"
        parent="it_scoppelletti_theme_app">
        <item name="colorAccent">@android:color/white</item>
    </style>
    <!-- http://medium.com/@JakobUlbrich/building-a-settings-screen-for-android-part-1-5959aa49337c#.29crbu6tt
    May 28, 2016 -->
    <style name="it_scoppelletti_theme_preference"
        parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Material</item>
    </style>
</resources>