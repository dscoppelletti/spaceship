<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.InputType" />
        <variable name="model" type="it.scoppelletti.spaceship.sample.data.DataViewModel" />
    </data>
    <android.support.v4.widget.NestedScrollView
        style="@style/it_scoppelletti_style_contentFrame"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/it_scoppelletti_marginHorz"
            android:layout_marginRight="@dimen/it_scoppelletti_marginHorz"
            android:layout_marginTop="@dimen/it_scoppelletti_marginVert"
            android:layout_marginBottom="@dimen/it_scoppelletti_marginVert"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:it_scoppelletti_error="@{model.nameError}"
                android:theme="@style/it_scoppelletti_theme_textInputLayout">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={model.name}"
                    android:hint="@string/lbl_name"
                    app:it_scoppelletti_enabled="@{model.isNewData}"
                    app:it_scoppelletti_inputType="@{InputType.TYPE_CLASS_TEXT}"
                    app:it_scoppelletti_validator="@{model.nameValidator}"
                    android:imeOptions="actionDone"
                    android:textAppearance="@style/it_scoppelletti_text_headline" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:it_scoppelletti_error="@{model.descError}"
                android:theme="@style/it_scoppelletti_theme_textInputLayout">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={model.desc}"
                    android:hint="@string/lbl_desc"
                    android:inputType="text"
                    app:it_scoppelletti_validator="@{model.descValidator}"
                    android:imeOptions="actionDone" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
