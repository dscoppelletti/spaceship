<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="form"
            type="it.scoppelletti.spaceship.bluetooth.sample.data.PrintForm" />
    </data>
    <FrameLayout style="@style/it_scoppelletti_style_rootFrame">
        <android.support.design.widget.CoordinatorLayout
            style="@style/it_scoppelletti_style_coordinatorLayout"
            android:fitsSystemWindows="true">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                style="@style/it_scoppelletti_style_collapsingAppBarLayout"
                android:theme="@style/it_scoppelletti_theme_appBarLayout"
                android:layout_height="@dimen/it_scoppelletti_appBar_expandedHeight">
                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    style="@style/it_scoppelletti_style_collapsingToolbarLayout">
                    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                        style="@style/it_scoppelletti_style_collapsingToolbar"/>
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>
            <android.support.v4.widget.NestedScrollView
                style="@style/it_scoppelletti_style_contentFrame"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:it_scoppelletti_error="@{form.bodyError}"
                    android:layout_marginLeft="@dimen/it_scoppelletti_marginHorz"
                    android:layout_marginRight="@dimen/it_scoppelletti_marginHorz"
                    android:layout_marginTop="@dimen/it_scoppelletti_marginVert"
                    android:layout_marginBottom="@dimen/it_scoppelletti_marginVert"
                    android:theme="@style/it_scoppelletti_theme_textInputLayout">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={form.body}"
                        android:hint="@string/lbl_body"
                        android:inputType="text|textMultiLine|textImeMultiLine"
                        app:it_scoppelletti_validator="@{form.bodyValidator}"
                        android:imeOptions="actionDone" />
                </android.support.design.widget.TextInputLayout>
            </android.support.v4.widget.NestedScrollView>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                style="@style/it_scoppelletti_style_fab"
                android:layout_margin="@dimen/it_scoppelletti_fab_margin"
                app:srcCompat="@drawable/ic_print_white_24dp"
                app:layout_anchor="@id/app_bar_layout"
                app:layout_anchorGravity="bottom|end"
                app:fabSize="normal" />
        </android.support.design.widget.CoordinatorLayout>
        <it.scoppelletti.spaceship.widget.ProgressOverlay
            android:id="@+id/progress_bar"
            style="@style/it_scoppelletti_style_progressOverlay" />
    </FrameLayout>
</layout>

