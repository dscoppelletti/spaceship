<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <eat-comment/>
    <!-- Application -->
    <style name="it_scoppelletti_theme_app"
        parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
    </style>
    <!-- Activity without Action Bar -->
    <style name="it_scoppelletti_theme_activityNoActionBar"
        parent="it_scoppelletti_theme_app">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Actitivity with Navigation Drawer -->
    <style name="it_scoppelletti_theme_activityNavDrawer"
        parent="it_scoppelletti_theme_activityNoActionBar">
    </style>
</resources>
