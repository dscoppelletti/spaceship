<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <eat-comment />
    <!-- App Bar -->
    <style name="it_scoppelletti_style_appBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>
    <style name="it_scoppelletti_style_collapsingAppBarLayout"
        parent="it_scoppelletti_baseStyle_collapsingAppBarLayout">
    </style>
    <!-- Toolbar -->
    <style name="it_scoppelletti_style_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>
    <style name="it_scoppelletti_style_collapsingToolbar"
        parent="it_scoppelletti_style_toolbar">
        <item name="layout_collapseMode">pin</item>
    </style>
    <style name="it_scoppelletti_style_collapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
    </style>
    <!-- Navigation Drawer -->
    <style name="it_scoppelletti_style_drawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="it_scoppelletti_style_navView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="it_scoppelletti_style_drawerHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/it_scoppelletti_drawer_headerHeight</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>
    <!-- Tab Layout -->
    <style name="it_scoppelletti_style_tabLayout"
        parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
    </style>
    <!-- Coordinator layout -->
    <style name="it_scoppelletti_style_coordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- Floating Action Button -->
    <style name="it_scoppelletti_style_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- ProgressOverlay -->
    <style name="it_scoppelletti_style_progressOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- List
    http://material.io/design/components/lists.html#specs - September 28, 2018 -->
    <style name="it_scoppelletti_style_listItem_line1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>
    <style name="it_scoppelletti_style_listItem_line2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>
    <style name="it_scoppelletti_style_listItem_line23">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>
    <style name="it_scoppelletti_style_listItem_secondaryIcon">
        <item name="android:layout_width">@dimen/it_scoppelletti_list_secondaryIcon_size</item>
        <item name="android:layout_height">@dimen/it_scoppelletti_list_secondaryIcon_size</item>
        <item name="android:tint">?android:attr/textColorSecondary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
