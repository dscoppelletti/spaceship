<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded">
    <data>
        <variable name="item" type="it.scoppelletti.spaceship.sample.data.DataForm" />
    </data>
    <LinearLayout android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/it_scoppelletti_list_twoLineItem_height"
        android:orientation="vertical"
        android:onClick="@{item.onEditClick}"
        android:paddingLeft="@dimen/it_scoppelletti_marginHorz"
        android:paddingRight="@dimen/it_scoppelletti_marginHorz">
        <TextView android:text="@{item.name}"
            android:layout_width="match_parent"
            style="@style/it_scoppelletti_style_listItem_line1" />
        <TextView android:text="@{item.desc}"
            android:layout_width="match_parent"
            style="@style/it_scoppelletti_style_listItem_line2" />
    </LinearLayout>
</layout>