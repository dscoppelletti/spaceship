<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".databinding.NewPasswordActivityBinding">
        <variable name="model"
            type="it.scoppelletti.spaceship.cognito.data.NewPasswordViewModel" />
    </data>
    <android.support.design.widget.CoordinatorLayout
        style="@style/it_scoppelletti_style_coordinatorLayout"
        android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            style="@style/it_scoppelletti_style_appBarLayout"
            android:theme="@style/it_scoppelletti_theme_appBarLayout">
            <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                style="@style/it_scoppelletti_style_toolbar" />
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/content_frame"
            style="@style/it_scoppelletti_style_contentFrame"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout android:id="@+id/form_frame"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/it_scoppelletti_marginHorz"
                android:layout_marginRight="@dimen/it_scoppelletti_marginHorz"
                android:layout_marginTop="@dimen/it_scoppelletti_marginVert"
                android:layout_marginBottom="@dimen/it_scoppelletti_marginVert">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/it_scoppelletti_spacingVert"
                    android:text="@string/it_scoppelletti_cognito_msg_newPassword"
                    android:textAppearance="@style/it_scoppelletti_text_title" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:it_scoppelletti_error="@{model.passwordNewError}"
                    android:theme="@style/it_scoppelletti_theme_textInputLayout">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_passwordNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.passwordNew}"
                        android:hint="@string/it_scoppelletti_lbl_passwordNew"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        app:it_scoppelletti_validator="@{model.passwordNewValidator}" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:it_scoppelletti_error="@{model.passwordConfirmError}"
                    android:theme="@style/it_scoppelletti_theme_textInputLayout">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_passwordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.passwordConfirm}"
                        android:hint="@string/it_scoppelletti_lbl_passwordConfirm"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        app:it_scoppelletti_validator="@{model.passwordConfirmValidator}" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>