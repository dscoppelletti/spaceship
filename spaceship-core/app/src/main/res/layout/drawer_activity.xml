<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    style="@style/it_scoppelletti_style_drawerLayout"
    tools:context=".DrawerActivity">
    <android.support.design.widget.CoordinatorLayout
        style="@style/it_scoppelletti_style_coordinatorLayout">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            style="@style/it_scoppelletti_style_collapsingAppBarLayout"
            android:theme="@style/it_scoppelletti_theme_appBarLayout"
            android:layout_height="@dimen/it_scoppelletti_appBar_expandedHeight">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbarLayout"
                style="@style/it_scoppelletti_style_collapsingToolbarLayout">
                <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                    style="@style/it_scoppelletti_style_collapsingToolbar"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <FrameLayout android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/it_scoppelletti_behavior_fabScrollAware">
        </FrameLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            style="@style/it_scoppelletti_style_fab"
            android:layout_margin="@dimen/it_scoppelletti_fab_margin"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_add_menu"
            app:fabSize="normal" />
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        style="@style/it_scoppelletti_style_navView"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />
</android.support.v4.widget.DrawerLayout>

