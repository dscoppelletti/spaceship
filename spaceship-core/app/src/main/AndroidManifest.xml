<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.scoppelletti.spaceship.sample"
    tools:ignore="GoogleAppIndexingWarning">
    <application android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".MainApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/it_scoppelletti_theme_app">
        <activity android:name=".DrawerActivity"
            android:label="@string/app_name"
            android:theme="@style/it_scoppelletti_theme_drawerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TabbedActivity"
            android:label="@string/lbl_tabbedActivity" />
    </application>
</manifest>
